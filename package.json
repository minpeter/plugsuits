{
  "name": "cea-monorepo",
  "version": "1.0.0",
  "description": "A code-editing agent using Vercel AI SDK and FriendliAI",
  "private": true,
  "workspaces": ["packages/*"],
  "scripts": {
    "build": "bun run --cwd packages/harness build && bun run --cwd packages/cea build",
    "dev": "bun run --cwd packages/cea dev",
    "test": "bun test packages/harness/src packages/cea/src",
    "typecheck": "tsc --emitDeclarationOnly -p packages/harness && tsc --noEmit -p packages/cea",
    "check": "bun run --cwd packages/cea check",
    "lint": "bun run --cwd packages/cea lint",
    "start": "bun run --cwd packages/cea start",
    "headless": "bun run --cwd packages/cea headless",
    "test:headless-edit": "bun run scripts/test-headless-edit-ops.ts",
    "test:headless-edit-edge": "bun run scripts/test-headless-edit-edge-cases.ts"
  },
  "keywords": [
    "ai",
    "agent",
    "code-editing",
    "friendliai",
    "vercel-ai-sdk"
  ],
  "author": "",
  "license": "MIT",
  "packageManager": "bun@1.3.9",
  "engines": {
    "node": ">=18"
  }
}
